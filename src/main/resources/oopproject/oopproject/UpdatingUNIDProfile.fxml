<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23" prefHeight="400.0" prefWidth="600.0" fx:controller="oopproject.oopproject.UpdatingUNIDProfile">
    <Label layoutX="200.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Update U-NID Profile" />
    <Label layoutX="50.0" layoutY="80.0" text="Name:" />
    <TextField fx:id="nameField" layoutX="150.0" layoutY="80.0" prefWidth="300.0" />
    <Label layoutX="50.0" layoutY="120.0" text="Address:" />
    <TextField fx:id="addressField" layoutX="150.0" layoutY="120.0" prefWidth="300.0" />
    <Label layoutX="50.0" layoutY="160.0" text="Phone Number:" />
    <TextField fx:id="phoneField" layoutX="150.0" layoutY="160.0" prefWidth="300.0" />
    <Button fx:id="updateButton" layoutX="400.0" layoutY="200.0" text="Confirm Changes" onMouseClicked="#confirmChanges" />
    <Button layoutX="50.0" layoutY="250.0" text="Back to Dashboard" onMouseClicked="#backToDashboard" />
</AnchorPane>
